<!-- ./view/index.handlebars -->
<h1 class="d-flex justify-content-center mt-5 mb-5 hint">你想對誰說幹話？</h1>
    {{!-- <div class="images d-flex justify-content-center"> --}}
        {{!-- <div class="card d-flex align-items-center"> --}}
    {{!-- <div class="roles d-flex"> --}}
{{!-- target pictures --}}
<div class="roles d-flex justify-content-around m-2">
    <img class="rounded" src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5668/angry-developer.jpg" alt="developer" style="width: 18rem;">
    <img class="rounded" src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5667/angry-designer.jpg"  alt="designer">
    <img class="rounded" src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5669/angry-founder.jpg" alt="entrepreneur">
</div>
{{!-- target select --}}
<form method="POST" action="/">
    <div class="d-flex justify-content-around align-item-center m-2">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="target" id="developer" value="developer" {{#if options.developer}} checked{{/if}}>
            <label class="form-check-label hint" for="inlineRadio1">工程師</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="target" id="designer" value="designer" {{#if options.designer}} checked{{/if}} >
            <label class="form-check-label hint" for="inlineRadio2">設計師</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="target" id="entrepreneur" value="entrepreneur" {{#if options.entrepreneur}} checked{{/if}}>
            <label class="form-check-label hint" for="inlineRadio3">創業家</label>
        </div>
    </div>
    <div class="d-flex align-items-start m-5 col-10">
        <!-- submit button -->
        <button class="btn btn-success ml-3" type="submit">產生幹話</button>
        {{#if trashWords}}
        <div class="alert alert-light ml-3" role="alert">
            <span class="trashWords"><code>{{trashWords}}</code></span>   
        </div>
        {{/if}}
    </div>
</form>